<RelativeLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/education_background"
    android:gravity="left"

    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="left"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/settings_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/exit_button"
        android:layout_alignTop="@+id/settings_button"
        android:layout_toEndOf="@+id/settings_button" />

    <ImageButton
        android:id="@+id/parental_control"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/lock_icon"
        android:layout_alignTop="@+id/settings_button"
        android:layout_alignParentStart="true" />


    <ListView
        android:id="@+id/video_list"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignBaseline="@+id/relativeLayout">

    </ListView>
</RelativeLayout>
